@model StokApp.Models.BarangKeluar
@{
    ViewData["Title"] = "Input Barang Keluar";
    ViewData["Subtitle"] = "Catat penggunaan barang";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-4xl mx-auto">
    <div class="card">
        <div class="border-b border-gray-200 pb-4 mb-6">
            <h3 class="text-xl font-bold text-gray-800">
                <i class="fas fa-arrow-up text-red-600 mr-2"></i>Form Input Barang Keluar
            </h3>
            <p class="text-sm text-gray-500 mt-1">Pastikan stok mencukupi sebelum input</p>
        </div>

        <form method="post" asp-action="Create" asp-controller="BarangKeluar">
            @Html.AntiForgeryToken()
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Barang -->
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-box text-blue-600 mr-1"></i>
                        Barang <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="BarangId" class="input-field" required id="selectBarang">
                        <option value="">-- Pilih Barang --</option>
                        @foreach (var barang in ViewBag.Barangs)
                        {
                            var stok = barang.StokBarang?.TotalStok ?? 0;
                            var stokClass = stok == 0 ? "text-red-600" : stok <= barang.MinimumStok ? "text-yellow-600" : "text-green-600";
                            
                            <option value="@barang.Id" 
                                    data-satuan="@barang.Satuan" 
                                    data-stok="@stok"
                                    disabled="@(stok == 0)">
                                @barang.Nama (@barang.Kategori.Nama) - Stok: @stok @(stok == 0 ? "(HABIS)" : "")
                            </option>
                        }
                    </select>
                    <div id="stokWarning" class="hidden mt-2 bg-yellow-50 border-l-4 border-yellow-500 p-3 rounded-r">
                        <p class="text-yellow-800 text-sm">
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            <span id="stokWarningText"></span>
                        </p>
                    </div>
                    <span asp-validation-for="BarangId" class="text-red-500 text-sm"></span>
                </div>

                <!-- Tujuan Penggunaan -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-bullseye text-blue-600 mr-1"></i>
                        Tujuan Penggunaan <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="TujuanPenggunaan" class="input-field" required>
                        <option value="">-- Pilih Tujuan --</option>
                        <option value="Project Mesin Baru">Project Mesin Baru</option>
                        <option value="Project Area Baru">Project Area Baru</option>
                        <option value="Replace">Replace</option>
                        <option value="Trial">Trial</option>
                        <option value="Improvement">Improvement</option>
                    </select>
                    <span asp-validation-for="TujuanPenggunaan" class="text-red-500 text-sm"></span>
                </div>

                <!-- Plant -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-industry text-blue-600 mr-1"></i>
                        Plant <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="PlantId" class="input-field" required id="selectPlant">
                        <option value="">-- Pilih Plant --</option>
                        @foreach (var plant in ViewBag.Plants)
                        {
                            <option value="@plant.Id">@plant.Nama</option>
                        }
                    </select>
                    <span asp-validation-for="PlantId" class="text-red-500 text-sm"></span>
                </div>

                <!-- Area -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-map-marked-alt text-blue-600 mr-1"></i>
                        Area Produksi <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="AreaId" class="input-field" required id="selectArea">
                        <option value="">-- Pilih Area --</option>
                        @foreach (var area in ViewBag.Areas)
                        {
                            <option value="@area.Id" data-plant="@area.Plant.Id">
                                @area.Nama (@area.Plant.Nama)
                            </option>
                        }
                    </select>
                    <span asp-validation-for="AreaId" class="text-red-500 text-sm"></span>
                </div>

                <!-- Penanggung Jawab -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-user text-blue-600 mr-1"></i>
                        Penanggung Jawab <span class="text-red-500">*</span>
                        </label>
                        <input type="text" 
                       asp-for="PenanggungJawab" 
                       class="input-field" 
                       placeholder="Nama PIC"
                       required>
                <span asp-validation-for="PenanggungJawab" class="text-red-500 text-sm"></span>
            </div>

            <!-- Jumlah -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    <i class="fas fa-calculator text-blue-600 mr-1"></i>
                    Jumlah <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <input type="number" 
                           asp-for="Jumlah" 
                           class="input-field pr-20" 
                           min="1"
                           placeholder="0"
                           required
                           id="inputJumlah">
                    <span id="satuanDisplay" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 font-semibold">
                        pcs
                    </span>
                </div>
                <span asp-validation-for="Jumlah" class="text-red-500 text-sm"></span>
            </div>

            <!-- Tanggal -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    <i class="fas fa-calendar text-blue-600 mr-1"></i>
                    Tanggal <span class="text-red-500">*</span>
                </label>
                <input type="date" 
                       asp-for="Tanggal" 
                       class="input-field" 
                       value="@DateTime.Now.ToString("yyyy-MM-dd")"
                       required>
                <span asp-validation-for="Tanggal" class="text-red-500 text-sm"></span>
            </div>

            <!-- Keterangan -->
            <div class="md:col-span-2">
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    <i class="fas fa-comment text-blue-600 mr-1"></i>
                    Keterangan
                </label>
                <textarea asp-for="Keterangan" 
                          class="input-field" 
                          rows="3"
                          placeholder="Keterangan tambahan..."></textarea>
            </div>
        </div>

        <!-- Warning Box -->
        <div class="mt-6 bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
            <div class="flex items-start">
                <i class="fas fa-exclamation-triangle text-red-500 mt-1 mr-3"></i>
                <div class="text-sm text-red-800">
                    <p class="font-semibold mb-1">Perhatian:</p>
                    <ul class="list-disc list-inside space-y-1">
                        <li>Stok akan otomatis berkurang setelah data disimpan</li>
                        <li>Sistem akan mendeteksi mismatch jika tujuan tidak sesuai</li>
                        <li>Pastikan jumlah tidak melebihi stok tersedia</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="flex space-x-4 mt-6 pt-6 border-t border-gray-200">
            <button type="submit" class="btn-primary flex-1" id="btnSubmit">
                <i class="fas fa-save mr-2"></i>Simpan Data
            </button>
            <a href="@Url.Action("Index", "BarangKeluar")" class="btn-secondary flex-1 text-center">
                <i class="fas fa-times mr-2"></i>Batal
            </a>
        </div>
    </form>
</div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script>
        let currentStok = 0;

        document.getElementById('selectBarang').addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const satuan = selectedOption.getAttribute('data-satuan') || 'pcs';
            const stok = parseInt(selectedOption.getAttribute('data-stok')) || 0;
            
            currentStok = stok;
            document.getElementById('satuanDisplay').textContent = satuan;
            
            if (stok <= 10 && stok > 0) {
                document.getElementById('stokWarning').classList.remove('hidden');
                document.getElementById('stokWarningText').textContent = 
                    `Stok tersisa hanya ${stok} ${satuan}. Pastikan jumlah tidak melebihi stok!`;
            } else {
                document.getElementById('stokWarning').classList.add('hidden');
            }
        });

        document.getElementById('inputJumlah').addEventListener('input', function() {
            const jumlah = parseInt(this.value) || 0;
            const btnSubmit = document.getElementById('btnSubmit');
            
            if (jumlah > currentStok) {
                this.classList.add('border-red-500');
                btnSubmit.disabled = true;
                btnSubmit.classList.add('opacity-50', 'cursor-not-allowed');
                alert(`Jumlah tidak boleh melebihi stok tersedia (${currentStok})`);
            } else {
                this.classList.remove('border-red-500');
                btnSubmit.disabled = false;
                btnSubmit.classList.remove('opacity-50', 'cursor-not-allowed');
            }
        });

        document.getElementById('selectPlant').addEventListener('change', function() {
            const plantId = this.value;
            const selectArea = document.getElementById('selectArea');
            const options = selectArea.querySelectorAll('option');
            
            options.forEach(option => {
                if (option.value === '') {
                    option.style.display = 'block';
                } else if (option.getAttribute('data-plant') === plantId) {
                    option.style.display = 'block';
                } else {
                    option.style.display = 'none';
                }
            });
            
            selectArea.value = '';
        });
    </script>
}