@model IEnumerable<StokApp.Models.BarangMasuk>

@{
    ViewData["Title"] = "Barang Masuk";
    ViewData["Subtitle"] = "Riwayat barang masuk";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="flex justify-between items-center mb-6">
    <div>
        <h3 class="text-xl font-semibold text-gray-700">Riwayat Barang Masuk</h3>
        <p class="text-sm text-gray-500">
            Total: @(Model?.Count() ?? 0) transaksi
        </p>
    </div>

    @if ((string)ViewBag.UserRole == "Admin")
    {
        <a href="@Url.Action("Create", "BarangMasuk")" class="btn-primary">
            <i class="fas fa-plus mr-2"></i>Input Barang Masuk
        </a>
    }
</div>

<!-- Filter Section -->
<div class="card mb-6">
    <form method="get" asp-action="Index" asp-controller="BarangMasuk">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Tanggal Mulai</label>
                <input type="date"
                       name="startDate"
                       value="@Context.Request.Query["startDate"]"
                       class="input-field">
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Tanggal Akhir</label>
                <input type="date"
                       name="endDate"
                       value="@Context.Request.Query["endDate"]"
                       class="input-field">
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Plant</label>
                <select name="plantId" class="input-field">
                    <option value="">Semua Plant</option>
                    @if (ViewBag.Plants != null)
                    {
                        foreach (var plant in ViewBag.Plants)
                        {
                            <option value="@plant.Id"
                                    selected="@(Context.Request.Query["plantId"] == plant.Id.ToString())">
                                @plant.Nama
                            </option>
                        }
                    }
                </select>
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Barang</label>
                <select name="barangId" class="input-field">
                    <option value="">Semua Barang</option>
                    @if (ViewBag.Barangs != null)
                    {
                        foreach (var barang in ViewBag.Barangs)
                        {
                            <option value="@barang.Id"
                                    selected="@(Context.Request.Query["barangId"] == barang.Id.ToString())">
                                @barang.Nama
                            </option>
                        }
                    }
                </select>
            </div>

        </div>

        <div class="flex space-x-3 mt-4">
            <button type="submit" class="btn-primary">
                <i class="fas fa-filter mr-2"></i>Filter
            </button>
            <a href="@Url.Action("Index", "BarangMasuk")" class="btn-secondary">
                <i class="fas fa-redo mr-2"></i>Reset
            </a>
        </div>
    </form>
</div>

<!-- Table -->
<div class="card overflow-hidden">
    <div class="overflow-x-auto">

        @if (Model != null && Model.Any())
        {
            <table class="w-full">
                <thead class="bg-gradient-to-r from-green-600 to-emerald-600 text-white">
                    <tr>
                        <th class="px-6 py-4 text-left text-sm font-semibold">No</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold">Tanggal</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold">Barang</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold">Asal Barang</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold">Tujuan Awal</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold">Plant</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold">Lokasi</th>
                        <th class="px-6 py-4 text-center text-sm font-semibold">Jumlah</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold">Keterangan</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @{
                        int no = 1;
                    }

                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td class="px-6 py-4 text-sm text-gray-700">@no</td>

                            <td class="px-6 py-4 text-sm text-gray-700">
                                @(item.Tanggal.ToString("dd MMM yyyy"))
                            </td>

                            <td class="px-6 py-4">
                                <p class="font-semibold text-gray-800">
                                    @(item.Barang?.Nama ?? "-")
                                </p>
                                <p class="text-xs text-gray-500">
                                    @(item.Barang?.Kategori?.Nama ?? "-")
                                </p>
                            </td>

                            <td class="px-6 py-4 text-sm text-gray-700">
                                @(item.AsalBarang ?? "-")
                            </td>

                            <td class="px-6 py-4">
                                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-xs font-medium">
                                    @(item.TujuanAwal ?? "-")
                                </span>
                            </td>

                            <td class="px-6 py-4">
                                <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-xs font-medium">
                                    @(item.Plant?.Nama ?? "-")
                                </span>
                            </td>

                            <td class="px-6 py-4 text-sm text-gray-700">
                                @(item.LokasiPenyimpanan ?? "-")
                            </td>

                            <td class="px-6 py-4 text-center">
                                <span class="text-xl font-bold text-green-600">
                                    +@item.Jumlah
                                </span>
                            </td>

                            <td class="px-6 py-4 text-sm text-gray-700">
                                @(string.IsNullOrEmpty(item.Keterangan) ? "-" : item.Keterangan)
                            </td>
                        </tr>

                        no++;
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-12">
                <i class="fas fa-inbox text-gray-300 text-6xl mb-4"></i>
                <p class="text-gray-500">Belum ada data barang masuk</p>
            </div>
        }

    </div>
</div>
