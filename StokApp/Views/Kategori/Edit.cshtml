@model StokApp.Models.Kategori
@{
    ViewData["Title"] = "Edit Kategori";
    ViewData["Subtitle"] = "Update informasi kategori";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-2xl mx-auto">
    <div class="card">
        <div class="border-b border-gray-200 pb-4 mb-6">
            <h3 class="text-xl font-bold text-gray-800">
                <i class="fas fa-edit text-blue-600 mr-2"></i>Form Edit Kategori
            </h3>
        </div>

        <form method="post" asp-action="Edit" asp-controller="Kategori">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            
            <div class="space-y-6">
                <!-- Nama Kategori -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        Nama Kategori <span class="text-red-500">*</span>
                    </label>
                    <input type="text" 
                           asp-for="Nama" 
                           class="input-field" 
                           required>
                    <span asp-validation-for="Nama" class="text-red-500 text-sm"></span>
                </div>

                <!-- Deskripsi -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        Deskripsi
                    </label>
                    <textarea asp-for="Deskripsi" 
                              class="input-field" 
                              rows="4"></textarea>
                </div>

                <!-- Buttons -->
                <div class="flex space-x-4 pt-4 border-t border-gray-200">
                    <button type="submit" class="btn-primary flex-1">
                        <i class="fas fa-save mr-2"></i>Update Kategori
                    </button>
                    <a href="@Url.Action("Index", "Kategori")" class="btn-secondary flex-1 text-center">
                        <i class="fas fa-times mr-2"></i>Batal
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}